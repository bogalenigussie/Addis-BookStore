  <div class="main-container"> 
      
    <form id="add_book" method="POST" action="/api/books" enctype="multipart/form-data">
       <div class="new_book">
            <div class="form-group">
                <label for="title" class="text-light">Title</label>
                <input type="hidden" name="id" value="">
                <input type="text" name="Title" value="" placeholder="Noah Tolosa">
            </div>
       
            <div class="form-group">
                 <label for="Geners" class="text-light">Geners</label>
                 <div class="dropdown">
                 <select name="Geners">
                     <option>Romance</option>
                     <option>True Story</option>
                     <option>Suspense</option>
                     <option>Drama</option>
                     <option>Poem</option>
                 </select>
            </div>
     
            <div class="form-group">
                 <label for="PurchasePrice" class="text-light">Purchase Price</label>
                 <input type="text" name="PurchasePrice" value="&euro; " placeholder="0">
            </div>
            <div class="form-group">
                 <label for="SellingPrice" class="text-light">Selling Price</label>
                 <input type="text" name="SellingPrice" value="&euro; " placeholder="0">
            </div>
            <div class="form-group">
                 <label for="Description" class="text-light">Description</label>
                 <input type="text" name="Description" value="" placeholder="you can add description">
            </div>
            <div class="form-group">
                 <label for="ArrivalDate" class="text-light">Arrival Date:</label>
                 <input id="date" type="datetime-local" name="ArrivalDate" value="" placeholder="01.01.2000">
            </div>
            <div class="form-group">
               <label for="uploadimage" class="text-light">Upload Image:</label>
               <input id="book-cover" type="file" name="avatar" >
          </div>
            <div class="form-group">
                 <label for="status" id="status" class="text-light">Status:</label>
                <div class="radio inline">
                     <input type="radio" id="radio-1"name="status" value="Available">
                     <label for="radio-1" class="radio-label">Available</label>
                </div>
                <div class="radio inline">
                     <input type="radio" id="radio-2" name="status" value="out of stock">
                     <label for="radio-2" class="radio-label">Out of stock</label>
                </div>
       
            <div class="form-group">
                <button type="submit" class="btn text-dark update">Add to Stock</button>
            </div>
      </form>

</div> 

